<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>

<body>
    <div class="main">
        <div class="offcanvas offcanvas-start d-lg-block show" tabindex="-1" id="sidebar" data-bs-scroll="true"
            data-bs-backdrop="false" aria-controls="offcanvasScrolling">

            <div class="offcanvas-body" style="overflow: hidden;">
                <div class="d-flex align-items-center justify-content-center">
                    <img class="img-fluid pizza_shop_logo" src="~/images/logos/pizzashop_logo.png"
                        alt="Pizza shop logo not found">
                    <div class="title fs-5 fw-bold">PIZZASHOP</div>
                    <button type="button" class="btn-close d-md-none" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="d-flex flex-column mt-3 ps-3">
                    <a asp-controller="Dashboard" asp-action="Index" class="dashboard_btn sidebar_btn mt-4 fw-bold d-flex align-items-center">
                        <img class="me-1" src="~/images/icons/border-all.svg" alt="Dashboard image not found">
                        <div>Dashboard</div>
                    </a>
                    <a asp-controller="User" asp-action="UserList" class="users_btn sidebar_btn mt-4 fw-bold d-flex align-items-center">
                        <img class="me-1" src="~/images/icons/people.svg" alt="">
                        <div>Users</div>
                    </a>
                    <a asp-controller="User" asp-action="Roles" class="role_permission_btn sidebar_btn mt-4 fw-bold d-flex align-items-center">
                        <img class="me-1" src="~/images/icons/person-gear.svg" alt="">
                        <div>Role and Permission</div>
                    </a>
                    <a asp-controller="Menu" asp-action="Menu" class="menu_btn sidebar_btn mt-4 fw-bold d-flex align-items-center">
                        <img class="me-1" src="~/images/icons/clipboard.svg" alt="">
                        <div>Menu</div>
                    </a>
                    <a asp-controller="Section" asp-action="Index" class="table_section_btn sidebar_btn mt-4 fw-bold d-flex align-items-center">
                        <img class="me-1" src="~/images/icons/square.svg" alt="">
                        <div>Table and Section</div>
                    </a>
                    <a asp-controller="Tax" asp-action="Index" class="taxes_fees_btn sidebar_btn mt-4 fw-bold d-flex align-items-center">
                        <img class="me-1" src="~/images/icons/cash-coin.svg" alt="">
                        <div>Taxes And Fees</div>
                    </a>
                    <a asp-controller="Orders" asp-action="Orders" class="orders_btn sidebar_btn mt-4 fw-bold d-flex align-items-center">
                        <img class="me-1" src="~/images/icons/clipboard-check.svg" alt="">
                        <div>Orders</div>
                    </a>
                    @* <a asp-controller="Orders" asp-action="Orders"  class="orders_btn @(ViewBag["ActivePage"]?.ToString()=="Orders"?"custom-bg-blue":"") sidebar_btn mt-4 fw-bold d-flex align-items-center">
                        <img class="me-1" src="~/images/icons/clipboard-check.svg" alt="">
                        <div class="@(ViewBag["ActivePage"]?.ToString()=="Orders"?"text-white":"")">Orders</div>
                    </a> *@
                    <a asp-controller="Customers" asp-action="Customers" class="customers_btn sidebar_btn mt-4 fw-bold d-flex align-items-center">
                        <img class="me-1" src="~/images/icons/person-rolodex.svg" alt="">
                        <div>Customers</div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="user_body">
        <div class="status d-flex align-items-center justify-content-between h-10">
            <a class="btn btn-primary bg-white d-lg-block toggle_btn" data-bs-toggle="offcanvas" href="#sidebar"
                role="button" aria-controls="sidebar">
                <div class="d-flex align-items-center justify-content-center">
                    <img class="img-fluid pizza_shop_logo" src="~/images/logos/pizzashop_logo.png"
                        alt="Pizza shop logo not found">
                </div>
            </a>
            <div>
                <img class=" dropdown-toggle me-2 rounded-circle" data-bs-toggle="dropdown" aria-expanded="false" width="30" height="30"
                    src="@Context.Request.Cookies["Image"]" alt="">
                <ul class="dropdown-menu dropdown-menu-end ">
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <img class="me-2 rounded-circle" width="30" height="30" src="@Context.Request.Cookies["Image"]" alt="">
                            @Context.Request.Cookies["Username"]
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" asp-controller="Profile" asp-action="Profile">
                            <img class="me-2 rounded-circle" width="30" height="30" src="@Context.Request.Cookies["Image"]" alt="">
                            My profile
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" asp-controller="Profile"
                            asp-action="ProfileChangePassword">
                            Change Password
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" asp-controller="Profile" asp-action="Logout"
                            data-bs-toggle="modal" data-bs-target="#logout">
                            <div class="d-flex">
                                Logout
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="modal fade" id="logout" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered justify-content-center">
                <form>
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="d-flex justify-content-center"><img class="alert_img w-50"
                            width="100px" height="100px"
                                    src="~/images/toppng.com-warning-icon-2400x2400.png" alt=""></div>
                            <div class="d-flex justify-content-center">Are you sure you want to logout?
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <div class=" mt-3">
                                <button type="submit" asp-controller="Login" asp-action="Logout"
                                    class="btn btn-primary">Yes</button>
                                <button type="submit" class="btn border-primary ms-1">No</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <partial name="_Toaster.cshtml" ></partial>
        @RenderBody()

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
