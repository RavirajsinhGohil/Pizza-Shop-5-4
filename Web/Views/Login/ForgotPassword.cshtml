@model Repository.ViewModel.ForgotPasswordViewModel;

@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>

<body>
<partial name="_LoginToaster.cshtml" ></partial>
<div class="login container-fluid overflow-hidden">
    <div class="row">
        <div class="login_img p-0 col-lg-6 col-md-12">
            <img class="img-fluid h-100 pizza_img" src="~/images/dominos_background.jpg" alt="">
        </div>

        <div class="login_body col-lg-6 col-md-12 d-flex flex-column justify-content-center">
            <div class="login_heading d-flex w-100 align-items-center justify-content-center">
                <img class="img-fluid pizza_shop_logo" src="~/images/logos/pizzashop_logo.png"
                    alt="Pizza shop logo not found">
                <div class="title fs-4">PIZZASHOP</div>
            </div>

            <div class="login_main">
                <div class="mb-3 mt-4 fs-3">
                    Forgot Password
                </div>

                <div class="forgot_desc fs-6 mb-3">Enter your email and we'll send you a link to reset your password
                </div>

                <form id="loginForm" method="post">
                    <div class="form-floating input_item mb-3">
                        <input type="email" class="form-control" id="email" style=" position: relative;;"
                                placeholder="name@example.com" asp-for="Email">
                            <label class="w-100" for="floatingInput">
                                <div class="d-flex justify-content-between">
                                    <div>Email address*</div>
                                </div>
                            </label>
                            <div style="position: absolute; right: 12px; top: 15px ;">
                                <img src="~/images/icons/customer.svg" alt="">
                            </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary w-100 fs-5" asp-controller="Login"
                            asp-action="ForgotPassword">Send</button>
                    </div>

                    <a class="back_login mt-2 d-flex justify-content-center" asp-controller="Login"
                        asp-action="Login">Back to
                        login</a>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>