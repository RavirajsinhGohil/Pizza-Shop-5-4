@model Repository.ViewModel.ResetPasswordViewModel;

@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
</head>

<body>
    <partial name="_LoginToaster.cshtml"></partial>
<div class="login container-fluid overflow-hidden">
    <div class="row">
        <div class="login_img p-0 col-lg-6 col-md-12">
            <img class="img-fluid h-100 pizza_img" src="~/images/dominos_background.jpg" alt="">
        </div>

        <div class="login_body col-lg-6 col-md-12 d-flex flex-column justify-content-center">
            <div class="login_heading d-flex w-100 align-items-center justify-content-center">
                <img class="img-fluid pizza_shop_logo" src="~/images/logos/pizzashop_logo.png"
                    alt="Pizza shop logo not found">
                <div class="title fs-4">PIZZASHOP</div>
            </div>

            <div class="login_main">
                <div class="mt-4 mb-3 fs-3">
                    Reset Your Password
                </div>

                  

                <form id="loginForm" method="post">
                    <div class="form-floating">
                            <input type="password" style="position: relative;" asp-for="NewPassword" id="newPassword"
                                class="form-control mb-2" placeholder="NewPassword">
                            <i class="far fa-eye toggle-password" data-target="newPassword"
                                style=" cursor: pointer; position: absolute;  right: 12px; margin-top: -37px;"></i>
                            <label for="floatingPassword">New Password</label>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>


                        <div class="form-floating">
                            <input type="password" style="position: relative;" asp-for="ConfirmPassword" id="confirmpassword"
                                class="form-control" placeholder="ConfirmPassword">
                            <i class="far fa-eye toggle-password" data-target="confirmpassword"
                                style=" cursor: pointer; position: absolute;  right: 12px; margin-top: -37px;"></i>
                            <label for="floatingPassword">Confirm New Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                    <div class="my-3">
                        <button type="submit" class="btn btn-primary w-100 fs-5">Submit</button>
                    </div>

                    <a class="back_login mt-2 d-flex justify-content-center" asp-controller="Login"
                        asp-action="Login">Back to login</a>
                </form>
            </div>
        </div>
    </div>
</div>

    <script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".toggle-password").forEach(icon => {
            icon.addEventListener("click", function () {
                const targetId = this.getAttribute("data-target");
                const passwordField = document.getElementById(targetId);
                
                // Toggle password visibility
                if (passwordField.type === "password") {
                    passwordField.type = "text";
                    this.classList.remove("fa-eye");
                    this.classList.add("fa-eye-slash");
                } else {
                    passwordField.type = "password";
                    this.classList.remove("fa-eye-slash");
                    this.classList.add("fa-eye");
                }
            });
        });
    });
</script>
